<div class="container">
  <button type="button" class="btn btn-info">Create Payment</button>

  <div class="paymant_info">

    <div class="paymants_from">
      <%= "Paymants from #{@payments.first.starts_at} - #{@payments.first.ends_at}" %>
    </div>

    <table class="table table-striped" width="400px">
      <thead>
        <tr>
          <td> # </td>
          <td> Dates </td>
          <td> Creator </td>
          <td> Actions </td>
        </tr>
      </thead>
      <tbody>
      <% if @payments.present? %>
        <% while @payments.first.starts_at < @payments.first.ends_at do %>
          <% if @payments.first.starts_at.day  == 5 || @payments.first.starts_at.day == 20 %>
          <tr>
            <td>1</td>
            <td><%= @payments.first.starts_at.strftime('%b %d, %Y') %></td>
            <td> e-mail  </td>
            <td> </td>
            <td></td>
          </tr>
          <% end %>
            <% @payments.first.starts_at = @payments.first.starts_at.next_day %>
        <% end %>
      <% end %>
      </tbody>
    </table>

    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li>
          <a href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li>
          <a href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>

  </div>
</div>



